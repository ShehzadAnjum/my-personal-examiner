# Database Configuration (REQUIRED)
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
# Local: postgresql://postgres:password@localhost:5432/mypersonalexaminer_dev
# Neon: postgresql://user:pass@neon-host/dbname?sslmode=require
DATABASE_URL=postgresql://postgres:password@localhost:5432/mypersonalexaminer_dev

# Security Configuration (REQUIRED)
# Generate with: openssl rand -hex 32
# Or: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32

# JWT Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours (constitutional requirement)

# Application Configuration
ENVIRONMENT=development  # development | production
DEBUG=true

# API Configuration
API_V1_PREFIX=/api
PROJECT_NAME=My Personal Examiner API
VERSION=0.1.0

# CORS Configuration (Phase IV - Frontend)
CORS_ORIGINS=["http://localhost:3000"]

# AI Integration (Phase III+)
# OpenAI GPT-4 (fallback LLM)
OPENAI_API_KEY=sk-...
# Anthropic Claude Sonnet 4.5 (primary LLM)
ANTHROPIC_API_KEY=sk-ant-...
# Google Gemini (fallback LLM)
GEMINI_API_KEY=AIzaSyC968QSILjdVk0OXNUVh5VDZKeeVO0sWJY

# Logging
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR | CRITICAL

# Resource Bank Encryption (Phase: 006-resource-bank)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# Used for encrypting student LLM API keys at rest
ENCRYPTION_KEY=your-fernet-key-here-generate-with-command-above

# Resource Bank - File Storage (Feature: 007-resource-bank-files)
# AWS S3 Configuration (background upload redundancy)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
S3_BUCKET_NAME=resource-bank-dev
AWS_REGION=us-east-1
S3_ENABLED=true  # Set to false to disable S3 uploads for local dev

# YouTube API Configuration (transcript extraction, max 10 videos/day Phase 1)
YOUTUBE_API_KEY=your_youtube_api_key_here

# Signed URL Security (download authorization)
# Generate with: openssl rand -hex 32
SIGNING_SECRET_KEY=your-signing-secret-key-here-generate-with-openssl-rand-hex-32

# Redis Configuration (Celery broker for background tasks)
REDIS_URL=redis://localhost:6379/0

# ClamAV Configuration (virus scanning)
# Unix socket: /var/run/clamav/clamd.ctl
# TCP: localhost:3310
CLAMAV_SOCKET=/var/run/clamav/clamd.ctl
CLAMAV_TCP_HOST=localhost
CLAMAV_TCP_PORT=3310
